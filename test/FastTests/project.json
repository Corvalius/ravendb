{
  "version": "4.0.0-*",

  "buildOptions": {
    "allowUnsafe": true,
    "warningsAsErrors": true,
    "compile": {
      "include": [ "**/*.cs", "../../src/CommonAssemblyInfo.cs" ]
    },
    "embed": [
      "**/*.json",
      "Voron/Bugs/Data/*.txt",
      "**/*.ravendump"
    ],
    "define": [ "DEBUG" ],
    "copyToOutput": {
      "include": [ "../xunit.runner.json" ]
    }
  },

  "configurations": {
    "Release": {
      "buildOptions": {
        "optimize": true
      }
    },
    "Validate": {
      "buildOptions": {
        "optimize": true,
        "define": [ "VALIDATE", "VALIDATE_PAGES" ]
      }
    }
  },

  "testRunner": "xunit",

  "frameworks": {
    "netcoreapp1.1": {
      "dependencies": {
      },
      "imports": "dnxcore50"
    }
  },

  "dependencies": {
    "dotnet-test-xunit": "2.2.0-preview2-build1029",
    "Sparrow": "4.0.0-*",
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.1.0"
    },
    "Raven.Client": "4.0.0-*",
    "Raven.Server": "4.0.0-*",
    "Tests.Infrastructure": "1.0.0-*",
    "Voron": "4.0.0-*",
    "xunit": "2.2.0-beta4-build3444"
  }
}
